@model List<BertoniSolutions.Models.PhotoViewModel>

<table>
    @foreach (var photo in Model)
    {

        <tr>
            <td>@photo.Id</td>
            <td>@photo.AlbumId</td>
            <td>@photo.ThumbnailUrl</td>
            <td>@photo.Title</td>
            <td>@photo.Url</td>
            <td><button type="button" class="btn btn-info" id="visualizarComanterio" onclick="ver(@photo.AlbumId);" idVer="0">Ver Comentarios</button></td>
        </tr>

    }

</table>

<div id="comentarios"></div>


@section Scripts {
    <script type="text/javascript">

        function ver(id) {

            $.ajax({
                type: "GET",
                url: 'https://localhost:44393/Albums/Comentarios/' + id,
                //contentType: "application/json; charset=utf-8",
                //dataType: "html",
                success: function (data) {
                    $('#comentarios').html(data);
                }
            }
            );

        }

    </script>
}